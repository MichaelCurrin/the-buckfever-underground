{
    // This was added automatically when setting the type rule after it.
    "spellright.language": [
        "en"
    ],
    // Turn off markdown spellchecking if on at the Workspace level, otherwise poems look noisy esp in Afrikaans.
    "spellright.documentTypes": [
        "plaintext"
    ],

    "files.associations": {
        "*.html": "jekyll",
        "*.md": "jekyll",

        "README.md": "markdown",
        // This cannot be done by directory - only by filename. A bug?
        "deploy.md": "markdown",
        "development.md": "markdown",
        "index.md": "markdown",
        "installation.md": "markdown",
        "usage.md": "markdown",
    }
}
